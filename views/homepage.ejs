<main class="container" flow-files-submitted="$flow.upload()" flow-init>
    <div class="col-xs-0 col-sm-0 col-md-3 col-lg-3">
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <div class="list-group" ng-controller="photosCtrl">
            <ul class="list-group">
                <li class="list-group-item" ng-repeat="photo in photos" ng-click="getDimensions(photo.id)">
                    {{photo.name}}
                </li>
            </ul>
        </div>
        <div class="ng-scope">
            <div ng-class="dropClass" flow-drop class="drop" >
                <span flow-btn class="btn btn-default" flow-attrs="{accept:'image/*'}">choose
                    <input type="file" style="visibility: hidden; position: absolute;">
                </span>
                <b> OR </b>
                drop
            </div>
        </div>
    </div>
    <div class="col-xs-0 col-sm-0 col-md-3 col-lg-3">
    </div>
</main>